---
import { Icon } from "astro-icon";

const { pathname } = Astro.url;
import "./styles.scss";
---

{
  pathname === "/" && (
    <header>
      <nav>
        <Icon id="lightswitch-on" name="lightbulbOnIcon" />
        <Icon id="lightswitch-off" name="lightbulbOffIcon" />
        <ul />
      </nav>
    </header>
  )
}

<script src="../../scripts/getCurrentTheme.js"></script>
